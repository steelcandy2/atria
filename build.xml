        <!-- For the current (as of 2023) C++ implementation of xalan. -->
        <exec executable="${xslt.processor}" failonerror="yes">
            <arg value="-param"/>
            <arg value="input-pathname"/>
            <arg file="${in}"/>
            <arg value="-param"/>
            <arg value="transform-pathname"/>
            <arg file="${style}"/>
            <arg value="-param"/>
            <arg value="output-pathname"/>
            <arg file="${out}"/>
            <arg value="-param"/>
            <arg value="generation-date-time"/>
            <arg value="'${TODAY} ${TSTAMP}'"/>

            <arg value="-in"/>
            <arg file="${in}"/>
            <arg value="-xsl"/>
            <arg file="${style}"/>
            <arg value="-out"/>
            <arg file="${out}"/>
        </exec>

